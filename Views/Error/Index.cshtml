@model HealthPortal.Models.ErrorModel

<style>
    #errorMessage {
        margin:auto;
        padding:20px;
        font-weight: bold;
        
    }

    .container h2 {
        color: red;
        text-align: center;
    }
    .container{
        margin-top:50px;
        padding:40px;
    }
</style>
<link href="../../css/bootstrap.css" rel="stylesheet" type="text/css" />
<link href="../../css/bootstrap-responsive.css" rel="stylesheet" type="text/css" />
<div class="container">
    <h2>Error</h2>
    <div class="text-error">
        Sorry, an error occurred while processing your request.Please Contact Administrator.
    </div>
    <div id="errorMessage" class="alert-error">
        @{
            string message = null;
            switch (Model.HttpStatusCode)
            {
                case 404:
                    message = "The requested content was not found";
                    break;
                case 500:
                    message = string.Concat("The following server error was encountered:<br /> ", Model.Exception.Message);
                    break;
            }
        }

        @Html.Raw(message)
    </div>

</div>
