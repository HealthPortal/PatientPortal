@model HealthPortal.Models.InsuranceBillingViewModel
@using System.Linq;

<!DOCTYPE html>
<html>
<head>
    <title></title>
    <style type="text/css">
        div.mclearfix a {
            color: #0087C3;
            text-decoration: none;
        }


        div.mclearfix {
            margin-bottom: 20px;
            border-bottom: 1px solid #AAAAAA;
            margin-top: 13px;
            border-top: 1px solid black;
            border-left: 1px solid black;
            border-right: 1px solid black;
            width: 100%;
        }

        #logo {
            float: left;
            margin-top: 8px;
        }

            #logo img {
                height: 70px;
            }

        #company {
            float: left;
            text-align: right;
            width: 176px;
        }


        #details {
            margin-bottom: 50px;
        }

        #client {
            padding-left: 6px;
            border-left: 6px solid #0087C3;
            float: left;
        }

            #client .to {
                color: #777777;
            }

        h2.name {
            font-size: 1.4em;
            margin: 0;
        }

        #invoice {
            float: right;
            text-align: right;
        }

            #invoice h1 {
                color: #0087C3;
                font-size: 1.4em;
                line-height: 2em;
                margin: 0 0 10px 0;
            }

            #invoice .date {
                font-size: 1.1em;
                color: #777777;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            border-spacing: 0;
            margin-bottom: 20px;
        }

            table th,
            table td {
                padding: 12px;
                background: #EEEEEE;
                text-align: center;
                border-bottom: 1px solid #FFFFFF;
            }

            table th {
                white-space: nowrap;
                font-weight: normal;
            }

            table td {
                text-align: right;
            }

                table td h3 {
                    color: #57B223;
                    font-size: 1.2em;
                    font-weight: normal;
                    margin: 0 0 0.2em 0;
                }

            table .no {
                color: #FFFFFF;
                font-size: 1.6em;
                background: blue;
            }

            table .desc {
                text-align: left;
            }

            table .unit {
                background: #DDDDDD;
            }

            table .qty {
            }

            table .total {
                background: #57B223;
                color: #FFFFFF;
            }

            table tr.d0 {
                border-bottom: 1px solid black;
                border-top: 1px solid black;
                border-left: 1px solid black;
                border-right: 1px solid black;
            }

            table td.unit,
            table td.qty,
            table td.total {
                font-size: 18px;
                height: 183px;
            }

            table td.Diagnosis {
                background: #DDDDDD;
                font-size: 11px;
                text-align: left;
                width: 105px;
                font-weight: bolder;
            }

            table tbody tr:last-child td {
                border: none;
            }

            table tfoot td {
                padding: 10px 20px;
                background: #FFFFFF;
                border-bottom: 1px solid black;
                font-size: 1.2em;
                white-space: nowrap;
                border-top: 1px solid black;
                border-left: 1px solid black;
                border-right: 1px solid black;
            }

            table tfoot tr:first-child td {
                border-top: none;
            }

            table tfoot tr:last-child td {
                color: #57B223;
                font-size: 1.4em;
            }

            table tfoot tr td:first-child {
                border: none;
            }

        #thanks {
            font-size: 2em;
            margin-bottom: 5px;
        }

        #notices {
            padding-left: 6px;
            border-left: 4px solid blue;
            border-Top: 4px solid blue;
            border-bottom: 4px solid blue;
            border-right: 4px solid blue;
        }

            #notices .notice {
                font-size: 1.2em;
                background-color: #f89406;
            }

        div.footer {
            color: black;
            width: 100%;
            height: 0px;
            position: absolute;
            bottom: 0;
            border-top: 1px solid #AAAAAA;
            padding: 8px 0;
            text-align: center;
        }
    </style>
</head>
<body>

    @if (Model.InsuranceBills.Any())
    {
        foreach (var item in Model.InsuranceBills)
        {

            <div class="mclearfix">

                <div id="company">
                    <h2 class="name">Intelligent Infotech</h2>
                    <div>10909 Alamosa Dr.Suite 100</div>
                    <div>Fishers IN 46038</div>
                    <div>Phone: (317)570-5841</div>
                    <div><a href="mailto:pricing@intellinfotech.com">pricing@intellinfotech.com</a></div>
                </div>

                <div id="invoice">
                    <h1>INVOICE 3-2-1</h1>
                    <div class="name">Patient Name: @Model.patientname</div>
                    <div class="date">Date of Invoice: @item.Date</div>
                </div>
            </div>

            <table border="0" cellspacing="0" cellpadding="0">
                <thead>
                    <tr>
                        <th class="no" style="border-right: 1px solid white;">Date</th>
                        <th class="no" style="border-right: 1px solid white;">ICDCode</th>
                        <th class="no" style="border-right: 1px solid white;">Diagnosis</th>
                        <th class="no" style="border-right: 1px solid white;">Charges</th>
                        <th class="no" style="border-right: 1px solid white;">Payments</th>
                        <th class="no">Balance</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="unit">@item.Date</td>
                        <td class="desc">@item.ICDCode</td>
                        <td class="Diagnosis">@item.Diagnosis</td>
                        <td class="qty">$@item.Charges</td>
                        <td class="unit">$@item.Payments</td>
                        <td class="desc">$@item.Balance</td>
                    </tr>


                </tbody>
                <tfoot>
                    <tr class="d0">
                        <td class="Total" style=" background: #DDDDDD;">CURRENT</td>
                        <td class="Total" style=" background: #EEEEEE;">30-60 DAYS</td>
                        <td class="Total" style=" background: #DDDDDD;">60-90 DAYS</td>
                        <td class="Total" style=" background: #EEEEEE;">90-120 DAYS</td>
                        <td class="Total" style=" background: #DDDDDD;">120+ DAYS</td>
                        <td class="Total" style=" background: #EEEEEE;">AMOUNT DUE:</td>
                    </tr>
                    <tr class="d0">
                        <td class="Total" style=" background: #DDDDDD;">$@item.Balance</td>
                        <td class="Total" style=" background: #EEEEEE;"></td>
                        <td class="Total" style=" background: #DDDDDD;"></td>
                        <td class="Total" style=" background: #EEEEEE;"></td>
                        <td class="Total" style=" background: #DDDDDD;"></td>
                        <td class="Total" style=" background: #EEEEEE;">$@item.Balance</td>
                    </tr>
                </tfoot>
            </table>
            <div id="thanks">Thank you!</div>
            <div id="notices">
                <div>NOTICE:</div>
                <div class="notice">Unpaid balances may be sent to a collection agency.</div>
            </div>

            <div class="footer">
               
            </div>
        }
    }



</body>
</html>
