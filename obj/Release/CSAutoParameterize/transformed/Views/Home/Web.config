<?xml version="1.0" encoding="utf-8"?>

<configuration>
  <location path="Admin">
    <system.web>
      <authorization>
        <allow roles="Admin" />
        <deny users="*" />
      </authorization>
    </system.web>
  </location>

  <location path="Physician">
    <system.web>
      <authorization>
        <allow roles="Physician" />
        <deny users="*" />
      </authorization>
    </system.web>
  </location>

  <location path="Patient">
    <system.web>
      <authorization>
        <allow roles="Patient" />
        <deny users="*" />
      </authorization>
    </system.web>
  </location>
</configuration>
